@model Infraestructure.Models.Compra

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-lg row">
    <h1>Pedido # @Html.DisplayFor(m => Model.Id)</h1>
    <div class="col-lg-4 col-md-4 col-sm-12">

        <div class=" container-fluid card w-100" style="width: 18rem;">
            <div class="card-body">
                <h3 class="card-title">Detalles del pedido</h3>

                @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
                <p class="card-text">
                    <span>
                        <ol>
                            <li>Fecha y hora del pedido: @Html.DisplayFor(m => Model.FechaHora)</li>
                            <li>Obervaciones: @Html.DisplayFor(m => Model.Observaciones)</li>
                            @if (Model.Estado == 3)
                            {
                                <li>Estado: <span class="text-success fw-bold">Entregado</span></li>
                            }

                        </ol>
                    </span>
                </p>
             
            </div>
        </div>

    </div>
    <div class="col-lg-8 col-md-8 col-sm-12">
        <table class="table table-striped w-100">
            <thead>
                <tr>
                    <td>Producto</td>
                    <td>Nombre</td>
                    <td>Cantidad</td>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model.DetalleCompra)
                {
                    if (item.Producto==null)
                    {
                        <td>pepepepepep</td>
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class=" container-fluid card w-100" style="width: 18rem;">
            <div class="card-body">
                <h3 class="card-title">Desglose del costo</h3>
                <p class="card-text">
                    <span>
                        <ol>
                            @foreach (var item in Model.DetalleCompra)
                            {
                                <li>Subtotal:  @Html.DisplayFor(i => item.SubTotal)</li>
                                <li>I.V.A:  @Html.DisplayFor(i=> item.Iva)</li>
                                <li><span class="fw-bold"><strong>Total:  </strong>@Html.DisplayFor(i=> item.Total)</span></li>
                            }



                        </ol>
                    </span>
                </p>
               
            </div>
        </div>
    </div>
</div>
