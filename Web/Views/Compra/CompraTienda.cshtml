@model IEnumerable<Infraestructure.Models.Compra>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}



<div class="content">
    <h1 id="producto-titulo" class="producto-titulo text-center mb-5" style=" color: var(--gray-nav) !important; font-size: 2.3rem !important;">Pedidos</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th># Pedido</th>
                <th>Producto</th>
                @*<th>Observaciones</th>
                    <th>Direccion de entrega</th>*@
                <th>Estado</th>

                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                foreach (var detalle in item.DetalleCompra)
                {
                    if (detalle.Producto.IdProveedor == ViewBag.idTienda)
                    {
                        <tr>

                            <td>@Html.DisplayFor(m => item.Id)</td>

                            <td>
                                <img style="width:100px; height:100px;" src="data:image/png;base64,@Convert.ToBase64String(detalle.Producto.Imagen)" alt="Imagen @Html.DisplayFor(modelItem => detalle.Producto.Nombre)" class="zoom-img" />
                            </td>
                            @if (item.Estado == 3)
                            {
                                <td><span class="text-success fw-bold">Entregado</span></td>
                            }
                            @if (item.Estado == 2)
                            {
                                <td><span class="text-warning fw-bold">En progreso</span></td>

                            }
                            @if (item.Estado == 1)
                            {
                                <td><span class="text-danger fw-bold">Pendiente</span></td>

                            }

                            <td>@Html.DisplayFor(o => detalle.Cantidad)</td>
                        </tr>
                    }
                }


            }

        </tbody>
    </table>

</div>
