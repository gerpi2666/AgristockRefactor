
@model List<Web.ViewModel.ViewModelDetalleCompra>

<div class="table-responsive-sm">

    <table class="table table-striped">
        <tr>
            <th>
                Producto
            </th>
            <th class="center">
                Cantidad
            </th>
            <th class="right">
                Precio
            </th>

            <th class="right">
                SubTotal
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelItem => item.Producto.Id)
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
                </td>
                <td class="center" style="width:1.5em">
                    @Html.EditorFor(modelItem => item.Cantidad, new { htmlAttributes = new { @class = "form-control changeCantidad", data_productoid = item.Producto.Id } })
                </td>
                <td class="right">

                    @Html.DisplayFor(modelItem => item.Precio)
                </td>

                <td class="right">
                    @Html.DisplayFor(modelItem => item.SubTotal)
                </td>
                <td>
                    <button type="button" class="btn btn-primary eliminar" data-id=@item.Producto.Id> <span class="material-symbols-outlined">delete</span></button>
                </td>


            </tr>
        }

    </table>
</div>
<div class="row">
    <div class="col-lg-4 col-sm-5"></div>
    <div class="col-lg-8 col-sm-5 ml-auto">
        <table class="table table-clear">
            <tbody>
                <tr>
                    <td class="right">
                        <strong>Total</strong>
                    </td>
                    <td class="right">
                        <strong>@(((decimal)Web.Utils.Carrito.Instancia.GetTotal()).ToString("C2"))</strong>
                    </td>
                </tr>
            </tbody>
        </table>

    </div>
</div>

