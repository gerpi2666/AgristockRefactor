@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<Infraestructure.Models.Producto>

@using Infraestructure.Models

@{
    // Convertir el modelo a IEnumerable<Producto>
    IEnumerable<Producto> modeloProductos = Model as IEnumerable<Producto>;
}


<div class="content">
    <div class="hero-image">
        <img class="hero-1" src="~/Content/Images/hero-1.png" alt="hero 1" />
        <div class="d-flex flex-row justify-content-between flex-wrap">

            <img class="hero-2" src="~/Content/Images/hero-2.png" alt="hero 2" />
            <img class="hero-3" src="~/Content/Images/hero-3.jpg" alt="hero 3" />
            <img class="hero-4" src="~/Content/Images/hero-4.jpg" alt="hero 4" />
        </div>
    </div>


    @Html.Partial("~/Views/Producto/_Productos.cshtml", modeloProductos)

</div>
