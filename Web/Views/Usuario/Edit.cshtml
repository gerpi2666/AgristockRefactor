@model Infraestructure.Models.Usuario

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutTienda.cshtml";
}


@using (Html.BeginForm("Update", "Usuario", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h2>Usuario</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Contrasena)


    <div class="col-md-10 d-flex align-items-center w-25 mb-3">
        <span style="margin-right: 1rem">Identificación: </span>
        @Html.EditorFor(model => model.Identificacion, new { htmlAttributes = new { @class = "form-control w-30" } })
        @Html.ValidationMessageFor(model => model.Identificacion, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 d-flex align-items-center w-25 mb-3">
        <span style="margin-right: 3.4rem">Nombre: </span>
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 d-flex align-items-center w-25 mb-3">
        <span style="margin-right: 3.3rem">Teléfono: </span>
        @Html.EditorFor(model => model.Telefono, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Telefono, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 d-flex align-items-center w-25 mb-3">
        <span style="margin-right: 4rem">Correo: </span>
        @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
    </div>

    <div class="col-md-10 d-flex align-items-center w-25 mb-3">
        <span style="margin-right: 4rem">Estado: </span>
        @Html.EditorFor(model => model.Activo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Activo, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <div class="btn-group" role="group">
            <input type="submit" value="Guardar" class="btn btn-success" />
            @Html.ActionLink("Regresar al listado", "Usuarios", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
}


