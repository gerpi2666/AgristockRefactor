
@model IEnumerable<Infraestructure.Models.Producto>


<div class="mt-5">

    <h1 id="producto-titulo" class="producto-titulo text-center" style=" color: var(--gray-nav) !important; font-size: 2.3rem !important;">Nuestros productos</h1>

    <div class="row d-flex flex-row justify-content-center mt-5">

        <div class="filter-menu">
            <div class="filter-option">
                <label for="filter-category">Categoría:</label>
                @*<select name="Categoria" id="Categoria">
                    @foreach (var cate in ViewBag.Categorias)
                    {
                    <option value="@cate.Id">@cate.nombre</option>
                    }
                </select>*@
            </div>

            <div class="filter-option">
                <label for="filter-price">Precio:</label>
                <select id="filter-price">
                    <option value="all">Todos</option>
                    <option value="0-50">0 - 50</option>
                    <option value="50-100">50 - 100</option>
                    <option value="100-200">100 - 200</option>
                    <!-- Agrega más rangos de precios aquí -->
                </select>
            </div>

            <div class="filter-option">
                <label for="filter-brand">Marca:</label>
                <select id="filter-brand">
                    <option value="all">Todas</option>
                    <option value="samsung">Samsung</option>
                    <option value="apple">Apple</option>
                    <option value="nike">Nike</option>
                    <!-- Agrega más opciones de marcas aquí -->
                </select>
            </div>

            <!-- Agrega más filtros según tus necesidades (p.ej., color, tamaño, etc.) -->
        </div>



        <div class="col-md-9 d-flex flex-row flex-wrap justify-content-between align-items-center w-100 contenedor-Productos">


            @foreach (var item in Model)
            {
                if (item.Borrado == false)
                {
                    <div class="col-md-3 ">
                        <div class="card " style="max-width:210px">
                            <img src="data:image/png;base64,@Convert.ToBase64String(item.Imagen)"
                                 alt="Imagen @Html.DisplayFor(modelItem => item.Nombre)" class="zoom-img" />
                            <div class="card-body">
                                <h5 class="card-title fw-bold text-black"> @Html.DisplayFor(modelItem => item.Nombre) </h5>

                                <p class="card-text">Precio: $@Html.DisplayFor(modelItem => item.Precio)</p>
                                <div class="btn-group d-flex" role="group">
                                    <button type="button" class="btn btn flex-grow-0 comprar" style="background: var(--color-secondary)" data-id="@item.Id">
                                        <span class="material-symbols-outlined text-white">shopping_bag</span>
                                    </button>


                                    <a href="@Url.Action("Details", "Producto", new { id = item.Id })" class="btn  text-white btn flex-grow-1 pt-2" style="background: var(--color-secondary-variant) ">Detalles</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>


</div>

